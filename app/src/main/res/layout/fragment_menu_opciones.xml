<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/boogaloo"
        android:gravity="center_horizontal"
        android:text="@string/plants"
        android:textColor="#F80029"
        android:textSize="80sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="-3dp"
        android:fontFamily="@font/andika"
        android:gravity="center_horizontal"
        android:text="@string/selecciona_una_opci_n"
        android:textColor="#000000"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnTomato"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="395dp"
        android:layout_marginEnd="89dp"
        android:backgroundTint="#FC0035"
        android:text="@string/tomate"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnStrawberry"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="281dp"
        android:layout_marginEnd="90dp"
        android:backgroundTint="#FC0035"
        android:text="@string/fresa"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="264dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/fresa_menu" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="65dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="381dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/tomate_menu" />


</RelativeLayout>